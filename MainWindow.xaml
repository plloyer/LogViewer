<Window x:Class="LogViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogViewer"
        mc:Ignorable="d"
        Title="Log Viewer" Height="600" Width="800"
        Background="#1E1E1E"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged"
        StateChanged="Window_StateChanged"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <local:LogToInlineConverter x:Key="LogToInlineConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Input -->
        <TextBox x:Name="FilterTextBox" 
                 Grid.Row="0" 
                 Margin="10,10,10,5" 
                 Padding="5" 
                 TextChanged="FilterTextBox_TextChanged"
                 Tag="Filter logs..."
                 FontSize="14"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555"/>

        <!-- Strip Prefix Input -->
        <Grid Grid.Row="1" Margin="10,0,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Strip Start (;) :" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="StripPrefixTextBox" 
                     Grid.Column="1"
                     Padding="5" 
                     TextChanged="StripPrefixTextBox_TextChanged"
                     Text="[Info   :AI Overhaul] [AI-Mod]"
                     Tag="Strip multiple prefixes (separate by ;)"
                     FontSize="14"
                     Background="#333333"
                     Foreground="White"
                     BorderBrush="#555555"/>
        </Grid>

        <!-- Exclude Content Input -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Exclude (;) :" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ExcludeTextBox" 
                     Grid.Column="1"
                     Padding="5" 
                     TextChanged="ExcludeTextBox_TextChanged"
                     Tag="Exclude lines containing these (separate by ;)"
                     FontSize="14"
                     Background="#333333"
                     Foreground="White"
                     BorderBrush="#555555"/>
        </Grid>

        <ListBox x:Name="LogListBox" 
                 Grid.Row="3" 
                 Margin="10" 
                 ItemsSource="{Binding FilteredLogs}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 Background="#1E1E1E"
                 BorderThickness="0"
                 KeyDown="LogListBox_KeyDown"
                 SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                     <ContentPresenter>
                        <ContentPresenter.Content>
                            <MultiBinding Converter="{StaticResource LogToInlineConverter}">
                                <Binding Path="Content" />
                                <Binding ElementName="StripPrefixTextBox" Path="Text" />
                            </MultiBinding>
                        </ContentPresenter.Content>
                     </ContentPresenter>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
